
{% extends base %}

{% block preamble %}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
{% endblock %}

{% block contents%}
<div class="container">
  <div class="row" > 
    <div class="col-12" style="height: 100px; background-color: darkblue; color: white"> 
      <h1><p class="text-center">WIK</p></h1>
      <h6><p class="text-center">In opdracht van waterschap Aa en Maas is onderstaande BOKEH app gemaakt. Deze app laat data uit FEWS real time zien.</p></h6>
    </div>
  </div>
  <div class="row" > 
    <div class="col-2">
      <div class="row" style="height:25px"> 
        <div class="col-12"; style="background-color: lightgrey">
        </div>
      </div>
      <div class="row" style="height: 50px; background-color: lightgrey">
        <div class="col-12"; style="background-color: lightgrey">
          {{ embed(roots.Filters) }} 
        </div>
      </div>
      <div class="row" style="height: 150px; background-color: lightgrey">
        <div class="col-12"; style="background-color: lightgrey">
          {{ embed(roots.Locaties) }}
        </div>
      </div>
      <div class="row" style="height: 150px; background-color: lightgrey">
        <div class="col-12"; style="background-color: lightgrey">
          {{ embed(roots.Parameters) }}
        </div>
      </div>
      <div class="row" style= "height: 50px; background-color: lightgrey">
        <div class="col-12"; style="background-color: lightgrey">
          {{ embed(roots.Slider) }} 
        </div>     
      </div>
      <div class="row" style="height: 50px; background-color: lightgrey">
        <div class="col-12"; style="background-color: lightgrey">
          {{ embed(roots.Zoektijdserie) }}
        </div>
      </div> 
      <div class="row" style="height: 100px"> 
        <div class="col-12"; style="background-color: lightgrey">
        </div>
      </div>  
    </div>
    <div class="col-5">
      <div class="row" style="height: 25px"> 
        <div class="col-12"; style="background-color: white">
        </div>
      </div>
      <div class="row" style="height: 350px"> 
        <div class="col-12"; style="background-color: white">
           {{ embed(roots.grafiek) }}
        </div>
      </div>
      <div class="row" style="height: 100px">    
        <div class="col-12"; style="background-color: white">
          {{ embed(roots.grafiek_lr) }}
        </div>
      </div>
      <div class="row" style="height: 50px">
        <div class="col-12"; style="background-color: white">
          {{ embed(roots.grafiek_slider) }}
        </div>
      </div>
    </div>
    <div class="col-4" style="background-color: white"> 
      <div class="row" style="height: 25px"> 
        <div class="col-12"; style="background-color: white">
        </div>
      </div>  
      <div class="row" style="height: 500px">
        <div class="col-12" style="background-color: white">
          {{ embed(roots.kaart) }}
        </div>
      </div>
    </div>     
  </div> 
  <div class="row">  
    <div class="col-12" style="height: 100px; background-color: darkblue; color: white">
    </div>
  </div> 	
</div> 

{% endblock %}

    